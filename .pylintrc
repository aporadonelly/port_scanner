[MASTER]
# Ignore folders and files we don't want to lint
ignore=__pycache__,venv

# Allow linting on Python 3.12+
py-version=3.12

# Optional: limit file linting if needed
# load-plugins=pylint.extensions.docparams

[MESSAGES CONTROL]
# Disable specific warnings:
# C0303: Trailing whitespace
# C0301: Line too long
# C0114/C0115/C0116: Missing docstrings
# W1203: Use % formatting in logger (we disable this if you still use f-strings for logging)
disable=
    C0301,
    C0303,
    C0114,
    C0115,
    C0116,
    W1203

[FORMAT]
# Set max line length
max-line-length=120

# Indentation settings
indent-string='    '
indent-after-paren=4

[BASIC]
# Good variable name pattern (keep short names like i, j, x, y, etc.)
good-names=i,j,k,x,y,z,_,ip,port

[DESIGN]
# Allow slightly larger functions/modules before warning
max-args=6
max-locals=20
max-returns=6
max-branches=12
max-statements=60
max-line-length=120

[TYPECHECK]
# Avoid import errors in virtual environments
ignored-modules=scapy

[REPORTS]
# Turn off detailed report at the end of Pylint output
reports=no

[LOGGING]
# Allow either f-strings or lazy % formatting
logging-format-style=old
